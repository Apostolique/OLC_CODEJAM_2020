<?xml version="1.0" encoding="utf-8" ?>

<Menu>
  <Font AssetName="latoblack" />

  <Script>
    <Name>GameplayMenuScript</Name>
    <AssetName>GameplayMenuScript</AssetName>
    <Class Name="GameplayMenu" />
  </Script>

  <Scene Name="mainScene">
    <Frame Name="debugFrame" Visible="false" Active="false">
      <Position>
        <X>0</X>
        <Y>0</Y>
      </Position>
      <Size>
        <Width>fill</Width>
        <Height>fill</Height>
      </Size>

      <Widgets>
        <Label Name="lblDebug" Template="DebugLabel">
          <Text></Text>
          <Position>
            <X>right</X>
            <Y>top</Y>
          </Position>
          <Offset>
            <X>-25</X>
            <Y>25</Y>
          </Offset>
        </Label>
      </Widgets>
    </Frame>
    <Frame Name="mainFrame">
      <Position>
        <X>0</X>
        <Y>0</Y>
      </Position>
      <Size>
        <Width>fill</Width>
        <Height>fill</Height>
      </Size>

      <Widgets>
        <Label Name="lblTitle">
          <Text>WAR MACHINE - OLC Code Jam 2020</Text>
          <FontName>latoblack</FontName>
          <FontSize>24</FontSize>
          <Position>
            <X>center</X>
            <Y>20</Y>
          </Position>
          <Color>#FFFFFF</Color>
          <UpdateMethod></UpdateMethod>
        </Label>

        <Label Name="lblInventory" Template="DebugLabel">
          <Text></Text>
          <Position>
            <X>left</X>
            <Y>top</Y>
          </Position>
          <Offset>
            <X>25</X>
            <Y>25</Y>
          </Offset>
        </Label>

        <Label Name="lblSelection" Template="DebugLabel">
          <Text></Text>
          <Position>
            <X>left</X>
            <Y>bottom</Y>
          </Position>
          <Offset>
            <X>25</X>
            <Y>-25</Y>
          </Offset>
        </Label>
      </Widgets>
    </Frame>
  </Scene>
</Menu>